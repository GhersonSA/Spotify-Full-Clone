<div className="border border-secondary bg-bg-secondary p-6 rounded-lg relative aspect-[16/10] max-w-[1680px] w-[min(85%,_min(1680px,_85vh*1.6))] h-[600px] flex justify-center items-center">
        {/* Portada y título */}
        <img
          src={currentPreview.image}
          alt={currentPreview.title}
          className="w-full h-64 object-cover rounded"
        />
        <h2 className="mt-4 text-xl font-bold">{currentPreview.title}</h2>
        {currentPreview.artist && (
          <p className="text-gray-500">{currentPreview.artist}</p>
        )}

        {/* Lista de previews (miniaturas) */}
        <div className="flex mt-4 overflow-x-auto gap-2">
          {songIds.map((id, index) => {
            const track = tracks.find(t => t.id === id);
            return (
              <img
                key={id}
                src={track.image}
                alt={track.title}
                className={`w-16 h-16 object-cover rounded cursor-pointer border-2 ${
                  index === currentIndex ? "border-blue-500" : "border-transparent"
                }`}
                onClick={() => setCurrentIndex(index)}
              />
            );
          })}
        </div>

        {/* Flechas internas opcionales */}
        <div className="flex justify-between mt-4">
          <button
            className="p-2 bg-gray-200 rounded"
            onClick={() =>
              setCurrentIndex((prev) => (prev - 1 + songIds.length) % songIds.length)
            }
          >
            ↑
          </button>
          <button
            className="p-2 bg-gray-200 rounded"
            onClick={() =>
              setCurrentIndex((prev) => (prev + 1) % songIds.length)
            }
          >
            ↓
          </button>
        </div>

        <button onClick={toggleMute} className="button-svg-playerbar group">
            <span className="flex items-center justify-center">
                {isMuted ? <MutedVolumenIcon className="svg-player-bar text-secondary" /> : <FullVolumenIcon className="svg-player-bar text-secondary" />}
            </span>
            <span className="svg-tooltip-player-bar">
                {isMuted ? "Activar sonido" : "Silenciar"}
            </span>
        </button>

        <div className="min-w-[100px] max-w-[200px] rounded-full">
            <div className="overflow-hidden left-0 right-0 bg-[#525252]/30 w-full h-[4px] rounded-[2px] bottom-[0px] px-2">
                <div className="bg-white rounded-full h-full" style={{width: `${(previewProgress / previewDuration) * 100}%`}}></div>
            </div>
        </div>
      </div>